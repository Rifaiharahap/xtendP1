<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:padding="5dp">


        <TextView
            android:id="@+id/judulurgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Perbaikan Jaringan Komputer"
            android:textColor="#000000"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/addressurgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/judulurgent"
            android:text="Jalan Iskandar Muda No.07"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/timeurgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:00"
            android:textSize="14sp"
            android:layout_marginEnd="31dp"
            android:layout_below="@+id/statusurgent"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/statusurgent"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/progres"
            android:layout_below="@+id/judulurgent"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>
</LinearLayout>
